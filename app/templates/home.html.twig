    })

    $('#selectLocalidad').on('change', function() {
        makeQuery();
    })

    $('#selectCategoria').on('change', function() {
        makeQuery();
    })

    $('.grid').masonry({
        // options
        itemSelector: '.grid-item',
    });

    $('#orden-likes').click(function() {
