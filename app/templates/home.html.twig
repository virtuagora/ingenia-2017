<script>
    var baseUrl = '{{base_url()}}';
    var link = null;

    $(document).ready(function(){
        $('.grid').masonry({
            // options
            itemSelector: '.grid-item',
        });
        makeQuery();
    });

    $('#buscarString').on('click', function() {
